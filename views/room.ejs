<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://unpkg.com/peerjs@1.3.2/dist/peerjs.min.js" defer></script>
    <link rel="stylesheet" href="../../page.css" defer>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <title>CodeSync</title>
</head>
<body>
    <% const roomID = data.roomID %>
    <% const username = data.users %>
    <% const language = data.language %>
    <nav class="navbar navbar-expand-lg navbar-custom">
      <div class="container-fluid">
        <a class="navbar-brand" href="#"><img src="../../Screenshot 2023-03-12 161528.png" alt="" style="height: 50px; width: 50px; border-radius: 10px;"></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item" style="padding: 5px;">
            <button id="CopyRoomId" class="btn btn-outline-light">Copy Room ID</button>
            </li>
          </ul>
          <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
            <li class="nav-item" style="padding: 5px;">
              <form action="/CodeSync/logout" method="post">
                <button type="submit" class="btn btn-outline-danger">Log Out</button>
              </form>
            </li>
          </ul>
        </div>
      </div>
    </nav>
      <h5 id="UserID" style="color: black;opacity:0;width:0;height:0;" class="text-center"><%=roomID%></h5>
      <div id="fullpage">
    <h3 id="language"><button class="btn btn-outline btn-rounded btn-warning" style="margin: 5px;" id="languageBtn"><%=language%></button></h3>
      <div id="editor"></div>
      <button id="download" class="btn btn-success" style="margin: 5px;">Download</button>
      <div id="video-grid"></div>
    </div>
    <nav class="navbar navbar-dark" style="background-color: #001220;" id="footer">
        <div class="container-fluid">
          <a href="https://github.com/ArpanMahanty01" target="_blank" class="navbar-brand" href="#">Made with <i class="fa-solid fa-heart"></i> by Arpan Mahanty  <i class="fa-brands fa-github"></i></a>
        </div>
      </nav>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/c9f863a1b4.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    
    <script src="../../client.bundle.js"></script>
    <script>
      const copyText = document.getElementById("CopyRoomId");
      const roomid = document.getElementById('UserID')
      copyText.addEventListener('click',()=>{
        copyTextValue = roomid.innerHTML;
        navigator.clipboard.writeText(copyTextValue)
      })
    </script>
</body>
</html>